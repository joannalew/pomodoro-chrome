{
  "name": "Pomodoro Popup",
  "description": "Take a break every 30 minutes!",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon" : "pomodoro.png",
    "default_title": "Pomodoro",
    "default_popup": "popup.html"
  }
}
